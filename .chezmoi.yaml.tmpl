{{- /* Checks if running interactively */ -}}
{{- $interactive := stdinIsATTY -}}

{{- /* Template file for chezmoi config file */ -}}
{{- $deepl_api_key := "" -}}
{{- $mode := "none" -}}
{{- $git_user := "" -}}
{{- $git_email := "" -}}
{{- $decrypt_data := false -}}

{{- $is_kpalatzky := promptBool "Are you kpalatzky? [Yn]" true -}}
{{- if $is_kpalatzky -}}
{{-     $mode = promptString "Template: [P]ersonal,[w]ork" "p" -}}
{{-     $mode = lower $mode -}}
{{-     if eq $mode "p" -}}
{{-         $mode = "personal" -}}
{{-     end -}}
{{-     if eq $mode "w" -}}
{{-         $mode = "work" -}}
{{-     end -}}
{{-     $decrypt_data = true -}}
{{- else -}}
{{-     $mode = "custom" -}}
{{-     $git_user = promptStringOnce . "git.user" "Git User:" -}}
{{-     $git_email = promptStringOnce . "git.email" "Git E-Mail:" -}}
{{-     $deepl_api_key = promptStringOnce . "secrets.deeplApiKey" "DeepL Api Key:" -}}
{{-     if $interactive -}}
{{-         writeToStdout "ðŸ’¡ Tip: you can re-enter your data with `chezmoi init --data=false`.\n" -}}
{{-     end -}}
{{- end -}}

format: yaml

{{- if $decrypt_data }}
encryption: age
age:
    identity: {{ .chezmoi.sourceDir }}/key.txt
    recipient: age12xj4kwr50r6rgdtmndlwznd2smeey08hyj85atwakgrl2w7dx3gq809dj3
{{- end }}

{{- $data := false -}}
{{- if eq $mode "personal" -}}
{{-     $data = (joinPath .chezmoi.sourceDir ".personal_data.yaml.age" | include | decrypt | fromYaml) -}}
{{- else if eq $mode "work" -}}
{{-     $data = (joinPath .chezmoi.sourceDir ".work_data.yaml.age" | include | decrypt | fromYaml) -}}
{{- end -}}

{{- if $data }}
{{-     $git_user = $data.git.user -}}
{{-     $git_email = $data.git.email -}}
{{-     $deepl_api_key = $data.secrets.deeplApiKey -}}
{{- end -}}

data:
    opts:
        decrypt_data: {{ $decrypt_data }}
        mode: {{ $mode }}
    git:
        user: {{ $git_user }}
        email: {{ $git_email }}
    secrets:
        deeplApiKey: {{ $deepl_api_key }}



merge:
    command: nvim

git:
    autoAdd: true